@model CarDealer.Models.PhotosListViewModel



<div class="row">
    <div class="col col-md-1"></div>
    <div class="col col-md-10">
        <h3>Oto Furki</h3>
        <div class="row col-md-12 img-fluid">

            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                @if (@Model.Photos.Count > 0)
                {
                    <ol class="carousel-indicators">
                        @for (int i = 0; i < @Model.Photos.Count; i++)
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                        }
                    </ol>
                    <div class="carousel-inner">

                        <div class="carousel-item active">
                            <img class="img-fluid d-block w-100" src="@Model.Photos[0].Url" alt="First slide">
                        </div>
                        @for (int i = 1; i < @Model.Photos.Count; i++)
                        {
                            <div class="carousel-item">
                                <img class="img-fluid d-block w-100 " src="@Model.Photos[i].Url" alt="First slide">
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>

                }
            </div>

            <div class="col-md p-3">
                <div class="row text-center">
                    <div class="col-md-4">
                        <a class="btn-floating blue accent-1">
                            <i class="fas fa-map-marker-alt">
                                <img style="width: 50px" src="https://res.cloudinary.com/db4z2k45t/image/upload/v1634228024/map-marker-512_xbpn2a.png" />
                            </i>
                        </a>
                        <p>Türkiye/İstanbul</p>
                    </div>
                    <div class="col-md-4">
                        <a class="btn-floating blue accent-1">
                            <i class="fas fa-envelope"></i>
                            <img style="height: 50px" src="https://res.cloudinary.com/db4z2k45t/image/upload/v1634227924/106-1061217_follow-along-and-learn-call-and-message-icon_rfc9xk.png" />
                        </a>
                        <p><a class="d-block" href="mailto:esquetta@gmail.com">esquetta@gmail.com</a></p>
                    </div>
                    <div class="col-md-4">
                        <a class="btn-floating blue accent-1">
                            <i class="fas fa-phone"></i>
                            <img style="width: 50px" src="https://res.cloudinary.com/db4z2k45t/image/upload/v1634227976/phone-icon_qsdsxf.png" />
                        </a>
                        <p>+90 566 999 1111</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col col-md-1"></div>
</div>