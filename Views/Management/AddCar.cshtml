@model CarDealer.Entities.Car
@{
    Layout = "~/Pages/Shared/_Home.cshtml";
    var EmptyCheck = ViewBag.errorMessage as string;
    var successCheck = ViewBag.SuccessMessage as string;
}
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<div class="container border-2">
    <h2>Car Create Form</h2>
    <form asp-action="AddCar" asp-controller="Management" method="post" runat="server">
        <div class="form-group">
            <label asp-for="Brand"></label>
            <input type="text" class="form-control" asp-for="Brand" placeholder="Enter Brand" required>
        </div>
        <div class="form-group">
            <label asp-for="Model"></label>
            <input type="text" class="form-control" asp-for="Model" placeholder="Enter Model" required>
        </div>
        <div class="form-group">
            <label asp-for="Age"></label>
            <input type="number" class="form-control" asp-for="Age" placeholder="Enter Car Age" required>
        </div>
        <div class="form-group">
            <label>Fuel Type</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" value="Motorin" asp-for="Fuel_Type" checked>
                <label class="form-check-label">
                    Motorin
                </label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="radio" value="Gasoline" asp-for="Fuel_Type">
                <label class="form-check-label">
                    Gasoline
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" value=" Hybrid" asp-for="Fuel_Type">
                <label class="form-check-label">
                    Hybrid
                </label>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Gearbox"></label>
            <div class="form-check">
                <input class="form-check-input" type="radio" value="Automatic" asp-for="Gearbox" checked>
                <label class="form-check-label" asp-for="Gearbox">
                    Automatic
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" value="Manual" asp-for="Gearbox">
                <label class="form-check-label" asp-for="Gearbox">
                    Manual
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" value="Half Automatic" asp-for="Gearbox">
                <label class="form-check-label" asp-for="Gearbox">
                    Half Automatic
                </label>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Horse_Power"></label>
            <input type="text" class="form-control" asp-for="Horse_Power" placeholder="Enter Horse Power" required>
        </div>
        <div class="form-group">
            <label asp-for="Miles"></label>
            <input type="number" class="form-control" asp-for="Miles" placeholder="Enter Miles" required>
        </div>
        <div class="form-group">
            <label asp-for="Color"></label>
            <input type="text" class="form-control" asp-for="Color" placeholder="Enter Color" required>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input type="number" class="form-control" asp-for="Price" placeholder="Enter Price" required>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input type="text" class="form-control" asp-for="Description" placeholder="Enter Description" required multiple>
        </div>
        <br />

        <button type="submit" class="btn btn-primary">Create</button>
        @if (EmptyCheck != null)
        {
            <p class="alert alert-warning">You must enter all values</p>
        }
        @if (successCheck != null)
        {
            <p class="alert alert-success">Car Created Succesfully!</p>
        }
    </form>
</div>