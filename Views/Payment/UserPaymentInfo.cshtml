@model CarDealer.Models.ShippingDetailsViewModel
@{
    ViewData["Title"] = "UserPaymentInfo";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>UserPaymentInfo</h1>
<head>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <link  rel="stylesheet" href="~/css/Payment.css" />
    <script src="~/js/Payment.js"></script>
</head>


<form asp-controller="Payment" asp-action="UserPaymentInfo" method="post">
    <div class="form-group">
        <label asp-for="ShippingDetails.FirstName"></label>
        <input asp-for="ShippingDetails.FirstName" class="form-control" placeholder="First Name" />
        <span asp-validation-for="ShippingDetails.FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetails.LastName"></label>
        <input asp-for="ShippingDetails.LastName" class="form-control" placeholder="Last Name" />
        <span asp-validation-for="ShippingDetails.LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetails.Phone_Number"></label>
        <input asp-for="ShippingDetails.Phone_Number" class="form-control" placeholder="Address" />
        <span asp-validation-for="ShippingDetails.Phone_Number"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetails.Adress"></label>
        <input asp-for="ShippingDetails.Adress" class="form-control" placeholder="Address" />
        <span asp-validation-for="ShippingDetails.Adress"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetails.City"></label>
        <input asp-for="ShippingDetails.City" class="form-control" placeholder="City" />
        <span asp-validation-for="ShippingDetails.City"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetails.Email"></label>
        <input asp-for="ShippingDetails.Email" class="form-control" placeholder="Email" />
        <span asp-validation-for="ShippingDetails.Email"></span>
    </div>
    <input type="submit" value="Continue to Payment" class="btn btn-xs btn-primary" />

</form>

